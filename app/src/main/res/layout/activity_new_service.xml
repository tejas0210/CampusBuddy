<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/arsenic"
    android:paddingRight="13dp"
    android:paddingLeft="13dp"
    android:paddingTop="30dp"
    tools:context=".views.NewServiceActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Gym"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:text="Gym" />

        <Button
            android:id="@+id/btn_Cafe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:elevation="10dp"
            android:text="Cafe" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Inn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:text="INN" />

        <Button
            android:id="@+id/btn_Play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:elevation="10dp"
            android:text="Play Area" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_mess"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:elevation="10dp"
            android:text="Mess" />

        <Button
            android:id="@+id/btn_Transport"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:backgroundTint="@color/white"
            android:alpha="0.7"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:elevation="10dp"
            android:text="Transport" />

    </LinearLayout>

</LinearLayout>